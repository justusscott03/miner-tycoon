{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,

    "lib": ["es2017", "dom"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true
  },

  "include": ["src/**/*", "types/**/*"]
}
